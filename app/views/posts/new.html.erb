<h1>Add Post!</h1>
<div class= "container jumbotron">
    <%= form_for :post,url: posts_path do |f| %>
        <p>
            <%= f.label :title %>
            <%= f.text_field(:title, {:class=>'form-control'}) %>
        </p>
        <p>
            <%= f.label :body %>
            <%= f.text_area(:body, {:class=> 'form-control'}) %>
        </p>
        <%= f.submit({:class => 'btn btn-primary'})%>
    <% end %>    
</div>
