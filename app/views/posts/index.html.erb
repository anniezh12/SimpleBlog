     <h1>Blog Posts</h1>
<div class="container">
               <table class="table table-striped">
               <thead>
               <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Body</th>
                    </tr>
               </thead>
               <tbody>
               <% @posts.each do |el,i|  %>
               <tr>
                    <th scope="row">!<%= %></th>
                    <td><%= el.title %></td>
                    <td><%= el.body %></td>
                    <td><div class="btn btn-warning"> <%= link_to "Update" %></div>
                    <div class="btn btn-danger"> Delete</div></td>
                    </tr>
               </div>
               <% end %>
               </table>
</div>

<div class="container">
     <div class="btn btn-success text-white"> <%= link_to "Add a post", new_post_path %> </div>
     <div class="btn btn-secondary"><%= link_to "Main page", @post %></div>
     </div>
    <% my_text = "Here is some basic text...\n...with a line break. <ol><li>one</li><li>2</li><li>3</li></ol> \n\n This should be a para" %>
      <%  simple_format(my_text, {}, sanitize:true).html_safe %>